{

	"manifest_version": 2,
	"name": "Selector",
	"version": "1.0",

	"description": "Get text from the page!",

	"icons": {
		"48": "icons/border-48.png"
	},

	"permissions": ["<all_urls>",
		"tabs"
	],

	"background": {
		"persistent": true,
		"scripts": ["selector.js"]
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["selection.js"]
	}],
}